<div class="container">
  <div class="text-center">
    <h2>Invites</h2>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name organization</th>
        <th scope="col">Accept</th>
        <th scope="col">Cancel</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.invites.each.with_index do | invite, index | %>
        <tr>
          <th scope="row">
            <%= index + 1 %>
          </th>
          <td>
            <%= invite.organization.name %>
          </td>
          <td>
            <%= link_to 'Yes', accept_invite_path(invite), method: :post %>
          </td>
          <td>
            <%= link_to 'No', destroy_invite_path(invite), remote: :true, method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
