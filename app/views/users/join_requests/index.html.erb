<div class="container-fluid">
  <div class="row mx-3">
    <div class="col-lg-2">
      <%= render partial: "user_dashboard/menu", locals: { active: :requests } %>
    </div>
    <div class="col-lg-10">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-requests" role="tabpanel" aria-labelledby="v-pills-requests-tab">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-6">
                <h3>Pending join requests:</h3>
                  <div id="user-request-pending">
                    <% if !@pending_requests.empty? %>
                      <% @pending_requests.each do |request| %>
                        <%= render partial: 'request_item', locals: { request: request } %>
                      <% end %>
                    <% else %>
                      <h4>No pending join requests.</h4>
                    <% end %>
                  </div>
              </div>
              <div class="col-md-6">
                <h3>Join requests history:</h3>
                <% if !@request_history.empty? %>
                  <% @request_history.each do |request| %>
                    <%= render partial: 'request_history_item', locals: { request: request } %>
                  <% end %>
                <% else %>
                  <h4>History empty.</h4>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
