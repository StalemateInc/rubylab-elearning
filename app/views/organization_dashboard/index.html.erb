<div class="container-fluid">
    <div class="row mx-3">
        <div class="col-lg-2">
            <%= render partial: "organization_dashboard/menu", locals: { organization: @organization } %>
        </div>
        <div class="col-lg-10">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-org-dashboard" role="tabpanel" aria-labelledby="v-pills-org-dashboard-tab">
                    <div class="container-fluid">
                      <div class="row">
                        <div class="col">
                          <h1>Organization courses:</h1>
                          <% @courses.each do |course| %>
                            <%= render partial: 'courses/card', locals: {course: course } %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
