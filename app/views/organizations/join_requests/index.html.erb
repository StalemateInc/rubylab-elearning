<div class="container-fluid">
  <div class="row mx-3">
    <div class="col-lg-2">
      <%= render partial: "organization_dashboard/menu", locals: { organization: @organization, active: :requests } %>
    </div>
    <div class="col-lg-10">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-org-requests" role="tabpanel" aria-labelledby="v-pills-org-requests-tab">
          <div class="container-fluid">
            <div class="row">
              <div class="col">
                <h1>All join requests: </h1>
                <% if @join_requests.empty? %>
                  <h4>No pending join requests found.</h4>
                <% else %>
                  <% @join_requests.each do |request| %>
                    <%= render partial: 'organizations/join_requests/card', locals: { request: request } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
