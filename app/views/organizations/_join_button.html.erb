<% if join_request %>
  <%= link_to 'Cancel join request', cancel_request_organization_path(organization, join_request),
              method: :delete,
              remote: :true,
              id: 'cancel-organization-button',
              class: 'btn btn-md btn-danger' %>
<% else %>
  <%= link_to 'Join', create_request_organization_path(organization),
              method: :post,
              remote: true,
              id: 'join-organization-button',
              class: 'btn btn-md btn-primary' %>
<% end %>
