<li class="list-group-item">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag('ela.png', widht: '50', height: '90') %>
    </div>
    <div class="col-md-6">
      <div class="text-center">
        <%= link_to(organization_path(organization), class: 'h6') do %>
        <h2><%= organization.name %></h2>
      <% end %>
      <small class="text-muted">Created at <%= organization.created_at.strftime("%b %d, %Y") %></small>
      <br>
      <div class="my-2">
      <small class="text-muted"><%= organization.description %></small>
    </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="container">
      <i class="fas fa-child"></i>
      <%= organization.memberships.count %>
    </div>
    <div class="container">
      <i class="fas fa-book"></i>
      <%= organization.created_courses.count %>
    </div>
  </div>
</div>
</li>
