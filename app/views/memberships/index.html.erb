<div class="container-fluid">
  <div class="row mx-3">
    <div class="col-lg-2">
      <%= render partial: "organization_dashboard/menu", locals: { organization: @organization, active: :memberships } %>
    </div>
    <div class="col-lg-10">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-org-users" role="tabpanel" aria-labelledby="v-pills-org-users-tab">
          <div class="container-fluid">
            <div class="row">
              <div class="col">
                <h1>Members of this organizations:</h1>
                <% @memberships.each do |membership| %>
                  <%= render partial: 'memberships/card', locals: {membership: membership } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
