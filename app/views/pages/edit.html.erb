<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h1>Edit page: </h1>
      <%= simple_form_for(@page, url: page_course_path(@course, @page), method: :patch) do |form| %>
        <div class="form-inputs">
          <%= form.input :html, as: :ckeditor, label: false, input_html: { ckeditor: { toolbar: 'Full' } }  %>
        </div>
        <div class="form-actions">
          <%= form.submit %>
          <%= link_to 'Back', pages_course_path(@course), class: 'btn btn-md btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>