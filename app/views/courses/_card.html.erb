<div class="card mb-3">
  <%= image_tag 'course.jpg', class: 'card-img-top', width: '781', height: '180' %>
  <div class="card-body">
    <h5 class="card-title"><%= course.name %></h5>
    <p class="card-text"><%= course.description %></p>
    <div class="row">
      <div class="col-md-8">
        <p class="card-text">
          <small class="text-muted">Created at
            <%= course.created_at.strftime("%b %d, %Y") %></small>
        </p>
      </div>
      <div class="col-md-1">
        <i class="fas fa-star">10</i>
      </div>
      <div class="col-md-1">
        <i class="fas fa-user"><%= course.completion_records.count %></i>
      </div>
      <div class="col-md-2">
        <%= link_to 'More', course_path(course), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
