var ratingVal = $('#rating').val()

if (ratingVal == undefined) {
  $('#rating-link').text('Rate course ￪')
  var rating = $('.rating-div')
  rating.append('<%= j render partial: "rating", locals: {user: current_user, course: @course} %>');
  var slider = new Slider("#rating");
  slider.on("slide", function(sliderValue) {
    document.getElementById("rating-val").textContent = sliderValue;
  });
}
else {
  $('#rating-link').text('Rate course ￬')
  $('.rating-h3').remove()
}