<% if participation.empty? %>
        <%= link_to 'Enroll', create_participation_path(course), method: :post, 
                    remote: true, class: 'btn btn-md btn-primary course_enroll' if course.published? %>
<% else %>
    <%= link_to 'Leave course', participation_path(participation.first.id),
                method: :delete, remote: :true, class: 'btn btn-md btn-danger course_leave' %>
<% end %>